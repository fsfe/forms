{
  "contact": {
    "required_vars": [
      "content"
    ],
    "to": [ "contact@fsfe.org" ],
    "redirect": "https://fsfe.org/contact/",
    "template": {
      "plain": {
        "content": "{{ content }}"
      }
    },
    "store": "/store/contact/contact.json"
  },
  "pmpc-sign": {
    "required_vars": [
      "name"
    ],
    "from": "admin@fsfe.org",
    "to": [ "contact@fsfe.org" ],
    "headers": {
      "X-OTRS-Queue": "PMPC"
    },
    "subject": "New signature to PMPC",
    "confirm": true,
    "redirect": "https://publiccode.eu/openletter/confirm",
    "redirect-confirmed": "https://publiccode.eu/openletter/success",
    "template": {
      "plain": {
         "filename": "pmpc-sign.txt"
      }
    },
    "confirmation-from": "no-reply@fsfe.org",
    "confirmation-template": {
      "plain": {
         "filename": "pmpc-confirm.txt"
      }
    },
    "confirmation-check-duplicates": true,
    "confirmation-duplicate-template": {
      "plain": {
         "filename": "pmpc-confirmation-duplicate.txt"
      }
    },
    "confirmation-duplicate-subject": "Public Code: Duplicated signature",
    "confirmation-subject": "Public Code: Please confirm your signature",
    "store": "/store/pmpc/signatures.json"
  },
  "ln-apply": {
    "required_vars": [
      "name",
      "confirm",
      "activities"
    ],
    "from": "{{ name }} <no-reply@fsfe.org>",
    "to": [ "contact@fsfe.org" ],
    "subject": "Application for Legal Network membership by {{ name }}",
    "confirm": true,
    "redirect": "https://fsfe.org/activities/ftf/ln-application-confirm.html",
    "redirect-confirmed": "https://fsfe.org/activities/ftf/ln-application-success.html",
    "template": {
      "plain": {
         "filename": "ln-apply.txt"
      }
    },
    "confirmation-from": "no-reply@fsfe.org",
    "confirmation-template": {
      "plain": {
         "filename": "ln-apply-confirm.txt"
      }
    },
    "confirmation-subject": "Legal Network: Please confirm your membership request",
    "headers": {
      "X-OTRS-Queue": "Legal Network",
      "Reply-To": "{{ name }} <{{ confirm }}>"
    },
    "store": "/store/ln/applications.json"
  }
}
